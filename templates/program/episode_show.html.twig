{% extends 'base.html.twig' %}
{% block title %}Episode #{{ episode.number }} -- Saison #{{ season.number }} de {{ program.title }} {% endblock %}

{% block body %}

<div class="media">
  <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
  <div class="media-body">
    <h1 class="mt-0">Episode n°{{ episode.number}} {{ episode.title }}</h1>
    <p>{{ episode.synopsis }}</p>
    <p>Catégorie : {{ program.category.name }}</p>
  </div>
</div>

<a href="{{ path('program_season_show', {'slug': program.slug, 'season': season.id })}}">
Retour à la saison {{ season.number }}
</a>

{% endblock %}